// 1
datasource db {
    provider = "postgresql"
    url = "***"
}

// 2
generator client {
    provider = "prisma-client-js"
}

// 3

model Exercise {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    name        String
    description String
    format      String
    postedBy    User     @relation(fields: [postedById], references: [id])
    postedById  Int
}

model RoutineRevision {
    id          Int      @id @default(autoincrement())
    createdAt   DateTime @default(now())
    routineBlob String
    Routine     Routine? @relation(fields: [routineId], references: [id])
    routineId   Int?
}

model Routine {
    id          Int               @id @default(autoincrement())
    createdAt   DateTime          @default(now())
    name        String
    description String
    color       String
    postedBy    User              @relation(fields: [postedById], references: [id])
    postedById  Int
    revisions   RoutineRevision[]
}

model User {
    id        Int        @id @default(autoincrement())
    username  String     @unique
    password  String
    routines  Routine[]
    exercises Exercise[]
}
